<%- include("header") -%>


    <div class="box" id="heading">
        <h1>
            <%= kindOfday %>
        </h1>
    </div>

    <div class="box">


        <% for (var i=0;i<newItem.length;i++){ %>
            <form action="/delete" method="post">

                <div class="item">
                    <input type="checkbox" name="chackBox" value="<%= i %>" onChange="this.form.submit()">
                    <p>
                        <%= newItem[i] %>
                    </p>
                </div>

            </form>
            <% } %>

                <form class="item" action="/" method="post">
                    <input type="text" name="addItem" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="page" value=<%=kindOfday %> >+</button>
                </form>

    </div>

    <%- include("footer") -%>